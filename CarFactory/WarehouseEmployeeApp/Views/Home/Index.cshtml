@using CarFactoryBusinessLogic.ViewModels
@model List<WarehouseViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Warehouses</h1>
</div>
<div class="text-center">
    @{
        if (Model == null)
        {
            <h3 class="display-4">Enter</h3>
            return;
        }
        <p>
            <a asp-action="Create">Create warehouse</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Num
                    </th>
                    <th>
                        Warehouse name
                    </th>
                    <th>
                        Manager name
                    </th>
                    <th>
                        Date Create
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WarehouseName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ManagerFullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateCreate)
                        </td>
                        <td>
                            <a asp-action="Update" asp-route-warehouseId="@item.Id" asp-route-name="@item.WarehouseName" asp-route-responsible="@item.ManagerFullName">Update</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>