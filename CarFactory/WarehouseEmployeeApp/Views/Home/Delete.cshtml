@{
    ViewData["Title"] = "Delete";
}
<div class="text-center">
    <h2 class="display-4">Delete warehouse</h2>
</div>
<form class="container-fluid" method="post">
    <div class="form-group">
        <div class="row">
            <div class="col-4">Warehouse:</div>
            <div class="col-8">
                <select id="warehouseId" name="warehouseId" class="form-control" asp-items="@(new SelectList(@ViewBag.Warehouse,"Id", "WarehouseName"))">
                </select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-12">
            <button type="submit" style="min-width: 100px" class="btn btn-sm btn-light">
                Delete
            </button>
        </div>
    </div>
</form>